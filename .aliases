# Aliases for 'ls' command variations
alias la='ls -lAh'
alias ll='ls -lah'

# Aliases for directory navigation
alias up='cd ..'
alias up2='cd ../..'
alias up3='cd ../../..'
alias up4='cd ../../../..'

# Aliases for frequent commands
alias diff='diff --color=auto'
alias mkdir='mkdir -pv'
alias vi='vim'

# Aliases for Tailscale
alias ts='tailscale'
alias tss='tailscale status'
alias tsssh='tailscale ssh'

# Kubernetes shortcuts
# Note: kc, kn, ke, kl, kdp, kdd, kdelp, ks are functions in .functions with fzf support
alias k='kubectl'
alias kapi='kubectl api-resources'
alias kcg='kubectl config get-contexts'
alias kd='kubectl get deployments'
alias kda='kubectl get deployments --all-namespaces'
alias kev="kubectl get events --sort-by='.lastTimestamp'"
alias keva="kubectl get events --all-namespaces --sort-by='.lastTimestamp'"
alias kns='kubectl get namespaces'
alias knsw='kubectl get namespaces --watch'
alias kp='kubectl get pods'
alias kpad='kubectl get pods --all-namespaces -o wide'
alias kpaw='kubectl get pods --all-namespaces --watch'
alias kpd='kubectl get pods -o wide'
alias kpw='kubectl get pods --watch'
alias krs='kubectl get replicasets'
alias krsa='kubectl get replicasets --all-namespaces'
alias kse='kubectl get secrets'
alias ksea='kubectl get secrets --all-namespaces'
alias kss='kubectl get statefulsets'
alias kssa='kubectl get statefulsets --all-namespaces'
alias ksv='kubectl get services'
alias ksva='kubectl get services --all-namespaces'

# Flux CD
alias fe='flux events'
alias fea='flux events --all-namespaces'
alias fgs='flux get sources git'
alias fkls='flux get kustomizations --all-namespaces'
alias fkr='flux resume kustomization'
alias fks='flux suspend kustomization'
alias fkw='watch -n 1 flux get kustomizations --all-namespaces'
alias frg='flux reconcile source git flux-system'
alias frh='flux reconcile helmrelease --with-source'
alias frk='flux reconcile kustomization --with-source'
alias fro='flux reconcile source oci flux-system'
alias fs='flux stats'

# GitHub Copilot CLI
alias cs='ghcs'
alias ce='ghce'

# Telepresence
alias tp='telepresence'

# Ansible
alias ap='ansible-playbook'

# Terraform
alias tf='terraform'

# Docker
alias dc='docker compose'
alias d='docker'

# Poetry
alias pl='poetry lock'
alias pu='poetry update'
alias pv='poetry version'
alias plu='poetry lock && poetry update'

# Skaffold
alias sk='skaffold'
alias skdel='skaffold delete'
alias skd='skaffold dev'
alias skdp='skaffold dev --profile'
alias skr='skaffold run'
alias skrm='skaffold run --module'
alias skrp='skaffold run --profile'

# Netcat
alias ncc='nc -zv'

# Firefox
alias ffm='/Applications/Firefox.app/Contents/MacOS/firefox -ProfileManager'

# OpenCode
alias oc='opencode'
