# Create a new directory and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# Kubernetes

# Change the current kubectl namespace
function kn() {
    kubectl config set-context --current --namespace="$1"
}

# Git

# Git Clone and cd into it
function gcl() {
    git clone "$1" && cd "$(basename "$1" .git)"
}
